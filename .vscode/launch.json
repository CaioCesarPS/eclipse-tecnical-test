  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Debug NestJS in Docker",
      "address": "0.0.0.0",
      "port": 9229,
      "sourceMaps": true,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      // Esse valor deve ser alterado de acordo com a pasta aonde os arquivos copiados para o container est√£o
      "remoteRoot": "/app"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run NestJS",
      "runtimeExecutable": "nest",
      "cwd": "${workspaceFolder}",
      "runtimeArgs": ["start", "--watch"],
      "outputCapture": "std"
    }
  ]
}
